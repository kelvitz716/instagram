# Required Telegram Settings
BOT_TOKEN=your_bot_token_here
API_ID=your_api_id_here
API_HASH=your_api_hash_here
TARGET_CHAT_ID=your_chat_id_here

# Optional Instagram Settings
INSTAGRAM_USERNAME=
INSTAGRAM_DOWNLOAD_TIMEOUT=300
INSTAGRAM_RETRY_DELAY=60
INSTAGRAM_MAX_RETRIES=3
INSTAGRAM_CAPTION_MAX_LENGTH=200
INSTAGRAM_DOWNLOAD_PROGRESS=true
INSTAGRAM_COOKIES_AUTO_REFRESH=true

# Database Settings
DATABASE_PATH=/app/data/bot_data.db
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=30
DATABASE_MAX_RETRIES=3
DATABASE_RETRY_DELAY=1.0

# Upload Settings
MAX_CONCURRENT_UPLOADS=3
LARGE_FILE_THRESHOLD=20971520
BOT_API_PAUSE_SECONDS=1.0
TELETHON_PAUSE_SECONDS=0.5
MAX_MESSAGES_PER_MINUTE=20
BATCH_SIZE=10
PROGRESS_UPDATE_THRESHOLD=5.0
STATUS_UPDATE_INTERVAL=5.0

# File Watcher Settings
FILE_WATCHER_ENABLED=false
FILE_WATCHER_RECURSIVE=true
FILE_WATCHER_POLL_INTERVAL=1.0
FILE_WATCHER_STABLE_DELAY=30
FILE_WATCHER_MAX_BATCH_SIZE=100

# Path Settings
DOWNLOADS_PATH=downloads
UPLOADS_PATH=uploads
TEMP_PATH=temp
SESSION_NAME=telegram_bot_session

# Connection Settings
CONNECTION_TIMEOUT=30
READ_TIMEOUT=30
BOT_API_TIMEOUT=60
TELETHON_TIMEOUT=300
FLOOD_CONTROL_BASE_DELAY=1.0
MESSAGE_EDIT_RETRY_DELAY=2.0
NETWORK_RETRY_ATTEMPTS=5

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Bot Version
BOT_VERSION=2.0.0
