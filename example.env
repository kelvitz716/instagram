PROGRESS_UPDATE_THRESHOLD=5.0  # Percentage
STATUS_UPDATE_INTERVAL=5.0  # Seconds

# Path Configuration
DOWNLOADS_PATH=downloads
UPLOADS_PATH=uploads
TEMP_PATH=temp
LOGS_PATH=logs
CONFIG_PATH=config

# Telegram Connection Settings
CONNECTION_TIMEOUT=30
READ_TIMEOUT=30
