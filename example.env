COOKIES_FILE=gallery-dl-cookies.txt  # Cookie file for authentication
INSTAGRAM_DOWNLOADS_PATH=downloads/instagram
DOWNLOAD_TIMEOUT=300
RETRY_DELAY=60
MAX_RETRIES=3
CAPTION_MAX_LENGTH=200
